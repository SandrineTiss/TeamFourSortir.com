{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{  asset('css/participation.css') }}">
{% endblock %}

{% block title %}Gestion des Participants{% endblock %}

{% block body %}

    <h1>Gestion des Participants</h1>

    {% for participant in participants %}
        - {{ participant.nom }} {{ participant.prenom }} du campus de {{ participant.campus.nom }}  <a class="petit" href="{{ path('participants_sommeil', {'id': participant.id}) }}" > Mettre en sommeil </a> - <a class="petit" href="{{ path('participants_suppression', {'id': participant.id}) }}" > Supprimer </a> <br/>
    {% endfor %}

    <a href="{{ path('app_register') }}"><button>Ajouter un participant</button></a>

{% endblock %}
