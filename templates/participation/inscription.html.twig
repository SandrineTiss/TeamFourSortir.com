{% extends 'base.html.twig' %}

{% block title %}Inscription à une sortie{% endblock %}

{% block body %}

        <div class="my-custom-class-for-errors">
            {{ form_errors(sortie) }}
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortie.nom, {'disabled' : 'true'}) }}
            </div>
            <div class="col">
                {{ form_row(sortie.campus, {'disabled' : 'true'}) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(sortie.dateHeureDebut, {'disabled' : 'true'}) }}
            </div>
            <div class="col">
                {{ form_row(sortie.lieu, {'disabled' : 'true'}) }}
            </div>
        </div>
    <div class="row">
        <div class="col">
            {{ form_row(sortie.dateLimiteInscription, {'disabled' : 'true'}) }}
        </div>
        <div class="col">
            <label>Rue :</label>
            <input type="text" disabled="disabled" value=" {{ lieu.rue }}">
        </div>
    </div>
        <div class="row">
            <div class="col">
                <label>Organisateur :</label>
                <input type="text" disabled="disabled" value=" {{ organisateur.nom }} {{ organisateur.prenom }}">
            </div>
            <div class="col">
                <label>Code postal :</label>
                <input type="text" disabled="disabled" value=" {{ ville.codePostal }}">
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(sortie.infoSortie, {'disabled' : 'true'}) }}
            </div>
        </div>
    <div class="row">
        <div class="col">
            {{ form_row(sortie.etat, {'disabled' : 'true'}) }}
        </div>
    </div>

    <div>
        <h3>Liste des participants inscrits :</h3>
        <table>
            <th>
                <td>Pseudo</td>
                <td>Nom</td>
            </th>
        {% for participant in inscrits %}
            <tr>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.prenom }} {{ participant.nom }}</td>
            </tr>

        {% endfor %}
        </table>
    </div>



    <button type="submit">S'inscrire à cette sortie</button>

{% endblock %}
